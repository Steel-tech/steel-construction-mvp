# Railway Production Environment
# These will be set in Railway dashboard

# Server (Railway provides PORT automatically)
NODE_ENV=production

# Security - MUST SET IN RAILWAY DASHBOARD
JWT_SECRET=GENERATE_NEW_SECRET_IN_RAILWAY_DASHBOARD
JWT_EXPIRES_IN=7d

# Database - Railway provides PostgreSQL
DATABASE_URL=${{DATABASE_URL}}

# CORS - Update with your Vercel URLs
FRONTEND_URL=https://steel-construction-mvp.vercel.app
ALLOWED_ORIGINS=https://steel-construction-mvp.vercel.app,https://steel-construction-mvp-*.vercel.app

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Optional Monitoring
SENTRY_DSN=
SENTRY_ENVIRONMENT=production