# Render Production Environment
# These will be set in Render dashboard

# Server (Render provides PORT automatically)
NODE_ENV=production

# Security - MUST SET IN RENDER DASHBOARD - DO NOT COMMIT SECRETS
# JWT_SECRET=<SET_IN_RENDER_DASHBOARD>
JWT_EXPIRES_IN=7d

# Database - Render can provide PostgreSQL or external DB
# DATABASE_URL=<SET_IN_RENDER_DASHBOARD_IF_USING_POSTGRESQL>

# CORS - Update with your Vercel URLs
FRONTEND_URL=https://steel-construction-asp2kfg18-fsw-iron-task.vercel.app
ALLOWED_ORIGINS=https://steel-construction-asp2kfg18-fsw-iron-task.vercel.app,https://steel-construction-mvp-*.vercel.app

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Optional Monitoring
SENTRY_DSN=
SENTRY_ENVIRONMENT=production